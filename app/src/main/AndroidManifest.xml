<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.maara.strandgui">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ColorPickActivity" />
        <activity
            android:name=".TransitionSelectActivity"
            android:label="Select transition"
            android:theme="@android:style/Theme.Holo.Dialog" />
        <activity
            android:name=".MotionSelectActivity"
            android:label="Select motion speed"
            android:theme="@android:style/Theme.Holo.Dialog" />
        <activity
            android:name=".FilterSelectActivity"
            android:label="Select filter" />
        <activity
            android:name=".FilterBlockConfigActivity"
            android:label="Select mode"
            android:theme="@android:style/Theme.Holo.Dialog" />
        <activity
            android:name=".RainbowMultipleActivity"
            android:theme="@android:style/Theme.Holo.Dialog" />
        <activity android:name=".VertigoSpeedActivity"
            android:label="Rainbow cycle interval"
            android:theme="@android:style/Theme.Holo.Dialog" />
    </application>

</manifest>