<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VertigoSpeedActivity">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="82dp">

        <RadioButton
            android:id="@+id/radioHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onVertigoSpeedSelect"
            android:text="1 hour" />

        <RadioButton
            android:id="@+id/radioMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onVertigoSpeedSelect"
            android:text="5 minutes" />

        <RadioButton
            android:id="@+id/radioDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onVertigoSpeedSelect"
            android:text="30 seconds" />

        <RadioButton
            android:id="@+id/radioVzzum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onVertigoSpeedSelect"
            android:text="vžžžžžžum!" />
    </RadioGroup>
</android.support.constraint.ConstraintLayout>